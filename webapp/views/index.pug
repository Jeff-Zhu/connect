extends layout

block content

  div(style='height:100vh')
    nav.transparent.z-depth-0
      .nav-wrapper
        .row
          .col.s12
            ul#robot-menu.right(style='display:none;')
              li
                a
                  i#battery-state
              li
                a.sidenav-trigger.show-on-large(data-target='waypoint-nav')
                  i.material-icons location_on

    #menu.row.valign-wrapper(style='height:80vh')
      .input-field.col.s3.offset-s8
        input#temi_id.validate.white-text(placeholder='00119462420', type='text', required_pattern="00119\d{6}")
        label(for='temi_id') temi ID
        #robot-nav.collection

    .white-text(style='position:relative')
      p(style='position:fixed; bottom:0; width:100%; text-align:center') © 2020 hapi-robo st, Inc. — All Rights Reserved.


  div
    ul#waypoint-nav.sidenav(style='background-color: rgba(232,232,232,0.5);')

  #video-conference
