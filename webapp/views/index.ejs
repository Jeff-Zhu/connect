<%- include('header') -%>

<body>
  <div style="height:100vh;"></div>
  <!-- robot selection menu-->
  <div class="row valign-wrapper" id="robot-menu">
    <div class="input-field col l2 offset-l5 m4 offset-m4 s6 offset-s3">
      <input class="validate white-text" id="temi-id" type="text" />
      <label for="temi-id">temi ID</label>
        <div id="robot-collection"></div>
    </div>
  </div>

  <!-- control panel-->
  <div class="container center-align" id="robot-ctrl-panel">
    <a class="btn-flat white-text" id="home-btn">
      <i class="fas fa-home"></i>
    </a>
    <a class="btn-flat white-text" id="video-btn">
      <i class="fas fa-video"></i>
    </a>
    <a class="btn-flat white-text modal-trigger" data-target="waypoint-menu">
      <i class="material-icons">location_on</i>
    </a>
    <a class="btn-flat white-text">
      <i id="battery-state"></i>
    </a>
  </div>

  <!-- video-call div-->
  <div class="row valign-wrapper">
    <div class="col l6 offset-l3 s12 center-align" id="video-container"></div>
  </div>

  <!-- text input-->
  <div class="row" id="text-input">
    <div class="input-field col l2 offset-l5 m4 offset-m4 s6 offset-s3">
      <input class="validate white-text" id="utterance" type="text" />
      <label for="utterance">Type to speak</label>
    </div>
  </div>

  <!-- footer-->
  <div class="white-text" style="position:relative">
    <p style="position:fixed; bottom:0; width:100%; text-align:center">© 2020 hapi-robo st, Inc. — All Rights Reserved.</p>
  </div>
  
  <!-- locations modal-->
  <div class="modal" id="waypoint-menu" style="width:30%;padding:0"></div>
  <div class="modal-content">
    <ul class="collection" id="waypoint-modal"></ul>
  </div>


  <!-- JavaScript at end of body for optimized loading-->
  <!-- Materialize JavaScript-->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <!-- Jitsi-->
  <!-- https://github.com/jitsi/jitsi-meet/blob/master/doc/api.md-->
  <script type="text/javascript" src="https://meet.jit.si/external_api.js"></script>

  <!-- Paho MQTT-->
  <!-- https://github.com/eclipse/paho.mqtt.javascript-->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/paho-mqtt/1.1.0/paho-mqtt.min.js"></script>
  
  <!-- Custom Events-->
  <script type="module" src="/js/main.js"></script>
</body>

</html>
